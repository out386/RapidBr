<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.bottom.SchedulerFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="bdechbdcbdcb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.timesliderrangepicker.library.TimeSliderRangePicker
        android:id="@+id/timeSliderRangePicker"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:padding="20dp"
        app:arc_color_am="@color/icGreen"
        app:arc_color_pm="@color/icGreen"
        app:arc_dash_size="20dp"
        app:border_color="#3F484F"
        app:border_thickness="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:thumb_size="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>